NumberOfAtoms           2
NumberOfSpecies         1
%block Chemical_Species_label
        1       78      Pt_pt2_SOC
%endblock Chemical_Species_label

PAO.EnergyShift  100 meV
PAO.SplitNorm      0.15
%Block PAO.Basis
Pt_pt2_SOC          2          
 n=6   0    2   P   1  
   7.158    6.085
   1.000    1.000
 n=5   2    2         
   5.044    3.098
   1.000    1.000
